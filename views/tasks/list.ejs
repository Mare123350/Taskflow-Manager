<%- include('../partials/header') %>

<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>All Tasks</h1>
    <a href="/tasks/create" class="btn btn-success">+ Add Task</a>
  </div>

  <% if (tasks.length === 0) { %>
    <div class="alert alert-info">
      No tasks found. Click "Add Task" to create your first one.
    </div>
  <% } else { %>
    <table class="table table-striped table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th>Priority</th>
          <th>Due Date</th>
          <th>Status</th>
          <th style="width: 200px;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% tasks.forEach(task => { %>
          <tr>
            <td><%= task.title %></td>
            <td><span class="badge bg-secondary"><%= task.category %></span></td>
            <td>
              <% if (task.priority === 'High') { %>
                <span class="badge bg-danger">High</span>
              <% } else if (task.priority === 'Medium') { %>
                <span class="badge bg-warning text-dark">Medium</span>
              <% } else { %>
                <span class="badge bg-success">Low</span>
              <% } %>
            </td>
            <td>
              <%= task.formattedDueDate %>
              <% if (task.isOverdue()) { %>
                <span class="badge bg-danger ms-1">Overdue</span>
              <% } %>
            </td>
            <td>
              <% if (task.completed) { %>
                <span class="badge bg-success">Completed</span>
              <% } else { %>
                <span class="badge bg-info text-dark">Pending</span>
              <% } %>
            </td>
            <td>
              <a href="/tasks/edit/<%= task._id %>" class="btn btn-sm btn-primary me-1">
                Edit
              </a>

              <form action="/tasks/delete/<%= task._id %>" method="POST" class="d-inline"
                    onsubmit="return confirm('Are you sure you want to delete this task?');">
                <button type="submit" class="btn btn-sm btn-danger">
                  Delete
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>

<%- include('../partials/footer') %>
